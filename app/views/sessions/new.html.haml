%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_tag url: '/login' do |f|
        %header
          %h1 Sign in
        = f.email_field :email, placeholder: 'name@example.com'
        = f.password_field :password, placeholder: 'Please enter your password.'
        %fieldset.form-group.action
          %input(type="submit" value="Sign in" class="btn btn-default")
